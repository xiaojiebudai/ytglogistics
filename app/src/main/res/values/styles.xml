<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- 旺旺主题 -->
    <style name="ww_app_theme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- 默认textview的字体颜色 -->
        <item name="android:textColorSecondary">@color/default_text_color</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置无边框 -->
        <!-- <item name="android:windowFrame">@null</item> -->
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置为浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 设置动画 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- 设置屏幕变暗 -->
    </style>
    <!-- 水平分隔线 -->
    <style name="cutline_fine">
        <item name="android:background">@color/gray_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.6dp</item>
    </style>
    <!-- 垂直分隔线 -->
    <style name="cutline_fine_v">
        <item name="android:background">@color/gray_line</item>
        <item name="android:layout_width">0.6dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
</resources>
